<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/spacebackground"
    android:gravity="center_horizontal"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="20dp"
    android:weightSum="1">

    <TextView
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <TextView
        android:text="or something like that"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/white" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_main_menu"
        android:background="@android:color/transparent"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/button_exit_main_menu"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_weight="0.25"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_option_main_menu"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_exit_main_menu"
        android:background="@android:color/transparent"
        android:layout_above="@+id/button_option_main_menu"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal|center" />
</LinearLayout>
</ScrollView>